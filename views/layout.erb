<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

<div class="container">
  <div class="title">
    <h1>What to Say...</h1>
  </div>
  <div class="signin">
    <% if session[:username]%>
      <p>You are signed in as <strong><%= session[:username] %></strong></p>
      <form action="/users/signout" method="post">
        <button type="submit">Sign out</button>
      </form>
    <% else %>
      <p>You are not signed in</p>
    <% end %>
  </div>
</div>

<p style="font-size:20px; color:#538b01; font-weight:bold; font-style:italic;"><%= session.delete(:success) %></p>

<% if session[:failure] %>
  <% session[:failure].each do |el|%>
    <p style="font-size:20px; color:red; font-weight:bold; font-style:italic;"><%= el %></p>
  <% end %>
  <% session.delete(:failure) %>
<% end %>


<%== yield %>
